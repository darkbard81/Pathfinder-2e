                "description": "진영별 평판 상태 / Faction reputation status",
                "additionalProperties": {
                    "type": "string",
                    "enum": [
                        "Hostile (원수)",
                        "Unfriendly (적대)",
                        "Neutral (일반)",
                        "Friendly (신뢰)",
                        "Allied (아군)"
                    ]
                }
            },
            "deepest_dungeon_floor": {
                "type": "integer",
                "minimum": 0,
                "description": "최종 도달 던전 층수 / Deepest floor reached in dungeon"
            },
